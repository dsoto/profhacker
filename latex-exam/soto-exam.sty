\usepackage{amsmath}
\usepackage{graphicx}
\usepackage{color}
\usepackage[nohead, margin=1.0in]{geometry}

%
% page formatting
%
\pagestyle{empty}
\setlength{\parindent}{0pt}
\setlength{\parskip}{10pt}

%
% set up whether we are printing assignment or solution
%
\newif\ifsolution

% name and signature boxes
\newcommand\namebox{
\makebox[1.0in][l]
{Name:}
\framebox[4.5in]{\rule{0cm}{1.5cm}}\\
}

%
% creates centered heading for sections
%
\newcommand{\chead}[1]
{\begin{center}\large\textbf{#1}\end{center}}

%
% creates true false command with indented question
%
\newcounter{truefalse}
\newcommand{\tf}[1]
{
\stepcounter{truefalse}
\parbox[t]{0.15\textwidth}
{\arabic{truefalse}.{\bf \ \ T \ \ F }}
\parbox[t]{0.85\textwidth}{#1 (2pt)}
\vfill
}

%
% creates grading table row macro
%
\newcommand{\tablerow}[2]
{\rule[-0.3cm]{0cm}{1cm}#1 & #2 & \\ \hline}

%
% creates numbered heading for problems
%
\newcounter{problem}
\newcommand{\problem}[1]
{
\stepcounter{problem}
\probhead{\arabic{problem}. #1}
}

%
% creates boldface heading and rule
%
\newcommand{\probhead}[1]
{{\large\textbf{#1}}
\vspace{5pt}
%\hrule
%\vspace{10pt}
}

%
% name and signature boxes
%
\newcommand{\makenameblock}
{
\makebox[1.0in][l]
{Name:}
\framebox[4.5in]{\rule{0cm}{1.5cm}}\\
\vspace{0.2cm}

\makebox[1.0in][l]
{Signature:}
\framebox[4.5in]{\rule{0cm}{1.5cm}}\\
\vspace{0.8cm}
}

%
% solution
%
\definecolor{solution-color}{rgb}{0.0, 0.5, 0.0}
\newcommand{\solution}[1]
{\ifsolution
%{\color{solution-color} #1}
{\it #1}
\else\fi}

