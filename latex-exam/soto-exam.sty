\usepackage{graphicx}
\usepackage{color}
\usepackage[nohead, margin=1.0in]{geometry}

% page formatting
\pagestyle{empty}
\setlength{\parindent}{0pt}
\setlength{\parskip}{10pt}

% set up whether we are printing assignment or solution
\newif\ifsolution

% creates true false command with indented question
\newcounter{truefalse}
\newcommand{\tf}[1]
{
\stepcounter{truefalse}
\parbox[t]{0.25\textwidth}
{\bf \arabic{truefalse}.\hfill TRUE \hfill FALSE \hspace{0.1 in}}
\parbox[t]{0.75\textwidth}{#1 (2pt)}
}

% creates grading table row macro
\newcommand{\tablerow}[2]
{\rule[-0.3cm]{0cm}{1cm}#1 & #2 & \\ \hline}

% creates heading for problems
%\newcommand{\problem}[1]{{\bf Problem #1}}
\newcounter{problem}
\newcommand{\problem}[1]
{
\stepcounter{problem}
\chead{\arabic{problem}. #1}
}

% creates centered heading for sections
\newcommand{\chead}[1]
%{\begin{center}\large\textbf{#1}\end{center}
{{\large\textbf{#1}}
\vspace{5pt}
\hrule
\vspace{10pt}}

\definecolor{solution-color}{rgb}{0.0, 0.5, 0.0}

% solution
\newcommand{\solution}[1]
{\ifsolution
{\color{solution-color} #1}
\else\fi}

% end macros
